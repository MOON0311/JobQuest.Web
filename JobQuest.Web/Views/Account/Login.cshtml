@model JobQuest.Web.Models.Login

<h2 class="text-center mb-3">Login</h2>

<div class="d-flex justify-content-center align-items-center vh-80">
    <form asp-action="Login" method="post" class="w-25">
        <div class="mb-3">
            <label class="form-label" asp-for="UserName"></label>
            <input class="form-control" asp-for="UserName" required/>
            <span asp-validation-for="UserName"></span>
        </div>
        <div class="mb-4">
            <label class="form-label" asp-for="Password"></label>
            <input class="form-control" asp-for="Password" type="password" required/>
            <span asp-validation-for="Password"></span>
        </div>
        <br />
        <button type="submit" class="btn btn-primary w-100">Login</button>
    </form>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var error = '@(ViewData.ModelState.ErrorCount > 0)';
            if (error === 'True') {
                alert("Wrong username or password. Please try again.");
            }
        });
    </script>
}