@model JobQuest.Web.Models.UserViewModel

<h1>Edit User</h1>

@if (Model is null)
{
    <p>No User detail found for this id.</p>
}
else
{

    <form method="post">
        <div class="mt-3">
            <label class="form-label">User ID</label>
            <input type="number" name="UserId" class="form-control" asp-for="UserId" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">UserName</label>
            <input type="text" name="UserName" class="form-control" asp-for="UserName" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">First Name</label>
            <input type="text" name="FirstName" class="form-control" asp-for="FirstName" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Last Name</label>
            <input type="text" name="LastName" class="form-control" asp-for="LastName" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Role</label>
            <input type="text" name="Role" class="form-control" asp-for="RoleName" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Status</label>
            <select class="form-control" name="Status" asp-for="Status">
                <option value="Active">Active</option>
                <option value="Suspended">Suspended</option>
            </select>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>

            <button type="submit" class="btn btn-danger ms-3"
                    asp-action="Delete"
                    asp-controller="Account">
                Delete
            </button>
        </div>
    </form>

}