@model JobQuest.Web.Models.Registration

<h2 class="text-center mb-3">Register Account</h2>

<div class="d-flex justify-content-center align-items-center vh-80">
    <form asp-action="Register" method="post" class="w-25">

        <div class="mt-3">
            <label class="form-label">User Role</label>
            <div class="form-check">
                <input type="radio" class="form-check-input" id="userRoleHR" name="RoleId" value="2" required />
                <label class="form-check-label" for="userRoleHR">HR</label>
            </div>
            <div class="form-check">
                <input type="radio" class="form-check-input" id="userRoleJobSeeker" name="RoleId" value="3" required />
                <label class="form-check-label" for="userRoleJobSeeker">JobSeeker</label>
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label" asp-for="UserName"></label>
            <input class="form-control" asp-for="UserName" required />
            <span asp-validation-for="UserName"></span>
        </div>

        <input type="hidden" asp-for="Password" id="Password" />

        <div class="mb-3">
            <label class="form-label" asp-for="FirstName"></label>
            <input class="form-control" asp-for="FirstName" required />
            <span asp-validation-for="FirstName"></span>
        </div>

        <div class="mb-3">
            <label class="form-label" asp-for="LastName"></label>
            <input class="form-control" asp-for="LastName" required />
            <span asp-validation-for="LastName"></span>
        </div>

        <div class="mt-b">
            <label class="form-label" asp-for="Email"></label>
            <input class="form-control" asp-for="Email" required />
            <span asp-validation-for="Email"></span>
        </div>

        <br />

        <button type="submit" class="btn btn-primary w-100">Register</button>
    </form>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('form').on('submit', function () {
                var username = $('#UserName').val();
                if (username) {
                    var newPassword = username + "12345678";
                    $('#Password').val(newPassword);
                }
            });
        });
    </script>
}