@model JobQuest.Web.Models.Application

<h1>Edit Application</h1>

@if (Model is null)
{
    <p>No Application found for this id.</p>
}
else {

<form method="post">
    <div class="mt-3">
        <label class="form-label">Application ID</label>
        <input type="number" name="ApplicationId" class="form-control" asp-for="ApplicationId" readonly/>
    </div>

    <div class="mt-3">
        <label class="form-label">User ID</label>
        <input type="number" name="UserId" class="form-control" asp-for="UserId" readonly/>
    </div>

    <div class="mt-3">
        <label class="form-label">Job Post ID</label>
        <input type="number" name="JobPostId" class="form-control" asp-for="JobPostId" readonly/>
    </div>

    <div class="mt-3">
        <label class="form-label">Resume</label>
        <input type="file" name="Resume" class="form-control" asp-for="ResumeFilePath" readonly/>
    </div>

    <div class="mt-3">
        <label class="form-label">Application Date</label>
        <input type="date" name="ApplicationDate" class="form-control" asp-for="ApplicationDate" readonly/>
    </div>

    <div class="mt-3">
        <label class="form-label">Status</label>
        <select class="form-control" name="Status" asp-for="Status">
            <option value="Pending">Pending</option>
            <option value="Accept">Accept</option>
            <option value="Reject">Reject</option>
        </select>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>

        <button type="submit" class="btn btn-danger ms-3" 
                asp-action="Delete"
                asp-controller="Application">Delete</button>
    </div>
</form>

}