@{
}

@model JobQuest.Web.Models.JobPost

<h1>Edit Posted Job</h1>

@if (Model is null)
{
    <p>Error Post.</p>
}
else
{

    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mt-3">
            <label class="form-label">JobPost ID</label>
            <input type="number" name="JobPostId" class="form-control" asp-for="JobPostId" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Status</label>
            <input type="text" name="IsActive" class="form-control" value="@(Model.IsActive ? "Active" : "Suspended")" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Title</label>
            <input type="text" name="Title" class="form-control" asp-for="Title" />
        </div>

        <div class="mt-3">
            <label class="form-label">Company Name</label>
            <input type="text" name="CompanyName" class="form-control" asp-for="CompanyName" />
        </div>

        <div class="mt-3">
            <label class="form-label">Description</label>
            <input type="text" name="Description" class="form-control" asp-for="Description" />
        </div>

        <div class="mt-3">
            <label class="form-label">Job Type</label>
            <select class="form-control" name="JobType" asp-for="JobType">
                <option value="FullTime">FullTime</option>
                <option value="PartTime">PartTime</option>
                <option value="Freelancer">Freelancer</option>
            </select>
        </div>

        <div class="mt-3">
            <label class="form-label">Location</label>
            <input type="text" name="Location" class="form-control" asp-for="Location" />
        </div>

        <div class="mt-3">
            <label class="form-label">Salary</label>
            <input type="number" name="Salary" class="form-control" asp-for="Salary" />
            <span asp-validation-for="Salary" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>

            <button type="submit" class="btn btn-danger ms-3"
                    asp-action="Delete"
                    asp-controller="JobPost">
                Delete
            </button>
        </div>
    </form>

}
